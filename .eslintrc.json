{
    "extends": [
        "eslint:recommended",
        "plugin:json/recommended"
    ],
    "env": {
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-unused-vars": ["warn", { "argsIgnorePattern":"next" }]
    }
}